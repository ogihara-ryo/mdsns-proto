
default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>

development:
  <<: *default
  database: mdsns_development

test:
  <<: *default
  database: mdsns_test
  host: localhost
  port: 5432
  username: <%= ENV.fetch("POSTGRES_USER") { 5 } %>
  password: <%= ENV.fetch("POSTGRES_PASSWORD") { 5 } %>

production:
  <<: *default
  database: mdsns_production
  username: mdsns
  password: <%= ENV['POSTGRES_PASSWORD'] %>
